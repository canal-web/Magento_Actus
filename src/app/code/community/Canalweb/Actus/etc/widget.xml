<widgets>
    <actus_actu_view type="canalweb_actus/actu_widget_view" translate="name description" module="canalweb_actus">
        <name>Actu view</name>
        <description>Actu view widget</description>
        <is_email_compatible>0</is_email_compatible>
        <parameters>
            <actu_id type="complex" translate="label">
                <visible>1</visible>
                <required>1</required>
                <label>Actu</label>
                <type>label</type>
                <helper_block>
                    <type>canalweb_actus/adminhtml_actu_widget_chooser</type>
                    <data>
                        <button translate="open">
                            <open>Select Actu</open>
                        </button>
                    </data>
                </helper_block>
                <sort_order>120</sort_order>
            </actu_id>
        </parameters>
    </actus_actu_view>
    <actus_actu_link type="canalweb_actus/actu_widget_link" translate="name description" module="canalweb_actus">
        <name>Actu link</name>
        <description>Actu link widget</description>
        <is_email_compatible>0</is_email_compatible>
        <parameters>
            <actu_id type="complex" translate="label">
                <visible>1</visible>
                <required>1</required>
                <label>Actu</label>
                <type>label</type>
                <helper_block>
                    <type>canalweb_actus/adminhtml_actu_widget_chooser</type>
                    <data>
                        <button translate="open">
                            <open>Select Actu</open>
                        </button>
                    </data>
                </helper_block>
                <sort_order>130</sort_order>
            </actu_id>
        </parameters>
    </actus_actu_link>
</widgets>
